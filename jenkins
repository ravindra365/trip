pipeline {
	// Keeps only 5 build
	options {
        buildDiscarder(logRotator(numToKeepStr: '5', artifactNumToKeepStr: '5'))
    }
    agent any
    tools{
	maven '/opt/apache-maven-3.8.8'
	}
	// there should be one stages
	stages{
		stage('Print maven version'){
			steps{
				sh 'mvn --version'
				}
			}		
	 
		
		stage('Code compilation using maven'){
			steps{
			sh 'mvn clean compile'
			}	
		}

		stage('Code package using maven'){
			steps{
			echo 'code packing is starting'
			sh 'mvn clean package'
			echo 'code packing is completed'
			}
		}

		stage('Building Docker version'){
		steps{
			sh 'docker --version'
			sh 'pwd'
			echo 'Starting Building Docker Image'
			sh 'docker build -t ravindra365/test1 .'
			sh 'docker build -t test1 .'
			echo 'Completed  Building Docker Image'
			
			}
		}
	}
		
}