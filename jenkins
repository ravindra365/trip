pipeline {
	// Keeps only 5 build
	options {
        buildDiscarder(logRotator(numToKeepStr: '5', artifactNumToKeepStr: '5'))
    }
    agent any
    tools{
	maven '/opt/apache-maven-3.8.8'
	}
	// there should be one stages
	stages{
		stage('Print maven version'){
			steps{
				sh 'mvn --version'
				}
			}		
	 
		
		stage('Code compilation using maven'){
			steps{
			sh 'mvn clean compile'
			}	
		}

		stage('Code package using maven'){
			steps{
			echo 'code packing is starting'
			sh 'mvn clean package'
			echo 'code packing is completed'
			}
		}

		stage('Building Docker version'){
		steps{
			sh 'docker --version'
			sh 'pwd'
			echo 'Starting Building Docker Image'
			sh 'docker build -f /opt/Dockerfile -t ravindra365/test1:v.${BUILD_ID} .'
			echo 'Completed  Building Docker Image'
			
			}
		}
		
		stage('Docker Image Scanning') {
            steps {
                echo 'Docker Image Scanning Started'
                sh 'java -version'
                echo 'Docker Image Scanning Started'
            }
        }
		
		stage(' Docker push to Docker Hub') {
           steps {
              script {
                 withCredentials([string(credentialsId: 'dockerhubCred', variable: 'dockerhubCred')]){
                 sh 'docker login docker.io -u ravindra365 -p ${dockerhubCred}'
                 echo "Push Docker Image to DockerHub : In Progress"
                 sh 'docker push ravindra365/test1:v.${BUILD_ID}'
                 echo "Push Docker Image to DockerHub : In Progress"
                 sh 'whoami'
                 }
              }
            }
        }
	}
		
}